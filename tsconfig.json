{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",         // This is crucial
    "moduleResolution": "node", // This is crucial
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}
